<!DOCTYPE html>
<html>
  <head>
    <title>web &bull; manage</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
	<script src="/hosted/rs/jsyaml.min.js"></script>
  </head>
  <body>
    <h1>web &bull; manage</h1>
    <hr />
    <div id="err_container"></div>
	<h2>Site Manager</h2>
	<h3>Editing <%= site.id %></h3>
	<hr>
	<input type="hidden" id="site" value="<%= JSON.stringify(site) %>">
	<input type="hidden" value="<%= us.apiKey %>" id="apikey_hidden">
	<input type="hidden" value="<%= us.id %>" id="user_hidden">


	<div id="content">
	</div>
	<div class="add_form" id="add_form">
		<input type="text" id="text" placeholder="Text">
		<input type="text" id="url" placeholder="URL">
		<input type="text" id="alt" placeholder="Alt">
		<input type="text" id="type" placeholder="Type">
		<button id="add_a">Add</button>
	</div>

    <footer>
		<hr>
      <p>
		<div class="right">
		<p>
			<strong>web</strong> <p>A <a href="https://znci.dev"><strong>znci</strong></a> project</p>
		</p>
		</div>
        
		<div class="left">
		<% if (us) { %>
			<% us %>
			<p>Hi, <strong><%= us.username %></strong>! (<%= us.id %>)</p>
		<%} else { %>
			<p>Hi there! Please login.</p>
		<% } %>

			&bull; <a href="dashboard">dashboard</a> 
		<br>
		&bull; 
		<% if (us) { %>
			<a href="/oauth/logout">logout</a>
		<%} else { %>
			<a href="/oauth/login">login</a>
		<% } %>
		</div>



      </p>
    </footer>
	<script src="/hosted/rs/be.js"></script>

	<script src="/hosted/rs/tc.js"></script>
  </body>
</html>
